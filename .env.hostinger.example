# ================================
# IEBC SARL - Configuration Hostinger
# ================================

# Application
APP_NAME="IEBC SARL"
APP_ENV=production
APP_KEY=base64:VOTRE_CLE_GENEREE_ICI
APP_DEBUG=false
APP_TIMEZONE=Africa/Douala
APP_URL=https://iebccorporation.com

# Locale
APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# Base de Données Hostinger
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=votre_base_hostinger
DB_USERNAME=votre_user_hostinger
DB_PASSWORD=votre_password_hostinger

# Session & Cache
SESSION_DRIVER=file
SESSION_LIFETIME=120
CACHE_STORE=file

# Filesystem - IMPORTANT pour les uploads
FILESYSTEM_DISK=public

# Queue
QUEUE_CONNECTION=database

# Mail Configuration (Gmail SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=votre_email@gmail.com
MAIL_PASSWORD=votre_mot_de_passe_app_gmail
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@iebc-cemac.com
MAIL_FROM_NAME="${APP_NAME}"

# ================================
# INSTRUCTIONS DE CONFIGURATION
# ================================
#
# 1. Copiez ce fichier et renommez-le en .env
# 2. Générez une nouvelle APP_KEY avec: php artisan key:generate
# 3. Vérifiez que APP_URL=https://iebccorporation.com
# 4. Configurez les informations de base de données Hostinger
# 5. Créez le lien symbolique storage: php artisan storage:link
# 6. Exécutez les migrations: php artisan migrate --force
# 7. Exécutez les seeders: php artisan db:seed --force
# 8. Videz les caches: php artisan optimize
#
